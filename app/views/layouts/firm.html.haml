!!!
%html{ data: { theme: :forest } }
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title LawFirmTdd
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_importmap_tags
  %body
    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-danger= alert

    %header.flex.flex-col.justify-center.items-center.gap-4.p-8
      %h1.text-3xl
        = link_to @firm.name, root_path
      %nav.btn-group
        = link_to 'Attorney List', firm_attorneys_path(@firm), class: 'btn btn-primary'
        = link_to 'About Us', about_us_path, class: 'btn btn-primary'
        = link_to "Log Out", destroy_user_session_path, method: :delete, class: 'btn btn-primary'

    %main
      = yield
